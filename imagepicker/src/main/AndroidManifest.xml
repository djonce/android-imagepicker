<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teach.wangjie.imagepicker">

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity
            android:name="teach.wangjie.imagepicker.PhotoAlbumActivity"
            android:label="@string/select_album"
            android:screenOrientation="portrait" />

        <activity
            android:name="teach.wangjie.imagepicker.PhotoWallActivity"
            android:label="@string/select_image"
            android:screenOrientation="portrait" />

    </application>

</manifest>
